            <section class="products__container container pt-5" id="productos">
                <div class="products__description">
                    <h2 class="products__title text-center mt-5 mb-3 container">Productos</h2>
                    <hr class="mb-5 container">
                </div>
                <ul class="products__link container align-items-center">
                    <% for (let i = 0; i < 8; i++) { %>
                        <a href="/catalogo">
                            <li class="product__content group-1 col mb-sm-4">
                                <div class="product__item" id="product__g1">
                                    <img src="assets/images/<%= resultsTipoProducto[i].nombre%>.png" class="product__image">
                                    <p class="product__group text-center"><%= resultsTipoProducto[i].nombre%></p>
