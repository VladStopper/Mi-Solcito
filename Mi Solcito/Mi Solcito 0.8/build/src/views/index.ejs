            </section>
            <section class="form__container container-fluid mt-4 pt-4 pb-4" id="contacto">
                <h2 class="text-center mt-5 mb-3 container">Contacto</h2>
                <hr class="mb-5 container">
                <form class="container" action="/contacto" method="post"  id="formContacto">
                    <div class="mb-4">
                        <label for="FormNombreInput" class="form-label">Nombre</label>
                        <input type="text" class="form-control input__bg" id="FormNameInput"  name="nombre">
                        
                    </div>
                    <div class="mb-4">
                        <label for="FormEmailInput" class="form-label">Email</label>
                        <input type="email" class="form-control input__bg" id="FormEmailInput" name="email">
                        
                    </div>
                    <div class="mb-4">
                        <label for="FormTelInput" class="form-label">Número de Teléfono</label>
                        <input type="text" class="form-control input__bg" id="FormPhoneInput" name="telefono">
                        
                    </div>
                    <div class="mb-4">
                        <label for="FormMsjInput" class="form-label">Mensaje</label>
                        <textarea class="form-control input__bg" id="FormMsjInput" rows="3" name="msj"></textarea>
                        
                    </div>
                    <button type="submit" class="btn btn-outline-dark">Enviar</button>
                    
                </form>
            </section>
